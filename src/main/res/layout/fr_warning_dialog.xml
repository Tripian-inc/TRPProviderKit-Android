<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black_transparent"
    android:layout_height="match_parent">

    <com.tripian.trpprovider.util.widget.CardView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_gravity="center"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:orientation="vertical">

            <com.tripian.trpprovider.util.widget.TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_soft"
                android:textSize="24sp"
                tools:text="Healine" />

            <com.tripian.trpprovider.util.widget.TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="15sp"
                tools:text="Lorem ipsum dolor sit amet, constur adipiscing elit. " />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="32dp"
                android:orientation="horizontal">

                <com.tripian.trpprovider.util.widget.Button
                    android:id="@+id/btnPositive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    tools:text="Positive" />

                <com.tripian.trpprovider.util.widget.Button
                    android:id="@+id/btnNegative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:layout_marginStart="16dp"
                    tools:text="Negative" />
            </LinearLayout>
        </LinearLayout>
    </com.tripian.trpprovider.util.widget.CardView>
</FrameLayout>